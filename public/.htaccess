RewriteEngine On
RewriteBase /DangDangStudio/public/

# --- BATASAN: ABAIKAN FOLDER PROCESS & UPLOADS ---
RewriteRule ^(process|uploads) - [L]

# 1. Redirect /nama_file.php ke /nama_file
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/DangDangStudio/public/([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# 2. Mapping internal: nama_file -> nama_file.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# 3. Fallback ke index.php (Pola Page System)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php !-f
RewriteRule ^([a-zA-Z0-9_-]+)$ index.php?page=$1 [L,QSA]

# 4. Penanganan Error (PASTIKAN PATH SESUAI DENGAN URL ANDA)
ErrorDocument 404 /DangDangStudio/public/error.php